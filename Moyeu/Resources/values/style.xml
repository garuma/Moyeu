<?xml version="1.0" encoding="utf-8"?>
<resources>
	<dimen name="gmap_preview_width">288dp</dimen>
	<dimen name="gmap_preview_height">128dp</dimen>

	<color name="moyeu_primary">#2BAF2B</color>
	<color name="moyeu_primary_dark">#424242</color>
	<color name="moyeu_accent">#A5DE00</color>
	<color name="moyeu_dark_tint">#aa0a7e07</color>

	<color name="nav_drawer_background">#333333</color>
	<color name="loading_background_color">#dddddd</color>
	<color name="card_background">#fdfdfd</color>
	<color name="dim_foreground">#cccccc</color>

	<color name="favorite_background">#E00056</color>

	<color name="white_primary">#d6ffffff</color>
	<color name="white_secondary">#89ffffff</color>
	<color name="black_primary">#c6000000</color>
	<color name="black_secondary">#89000000</color>

	<style name="dialog_title" parent="@android:style/TextAppearance.Material.Title" />

	<style name="MoyeuThemeBase" parent="@style/Theme.AppCompat.Light.NoActionBar">
    	<item name="android:colorPrimary">@color/moyeu_primary</item>
	    <item name="android:colorPrimaryDark">@color/moyeu_primary_dark</item>
	    <item name="android:colorAccent">@color/moyeu_accent</item>
	    <item name="colorPrimary">@color/moyeu_primary</item>
	    <item name="colorPrimaryDark">@color/moyeu_primary_dark</item>
	    <item name="colorAccent">@color/moyeu_accent</item>
	    <item name="android:textColorPrimary">@color/black_primary</item>
	    <item name="android:textColorSecondary">@color/black_secondary</item>
	</style>

	<style name="MoyeuTheme" parent="@style/MoyeuThemeBase" />

	<style name="MoyeuInvertedThemeOverlay">
		<item name="android:textColorPrimary">@color/white_primary</item>
	    <item name="android:textColorSecondary">@color/white_secondary</item>
	</style>

	<color name="swipe_refresh_color_main">#00C81C</color>
	<color name="swipe_refresh_color_shade1">#00AE18</color>
	<color name="swipe_refresh_color_shade2">#00D51E</color>
	<color name="swipe_refresh_color_shade3">#008813</color>
	<color name="list_selector_bg_main">#20000000</color>
	<string name="menu_item_fontFamily">sans-serif-light</string>

	<style name="info_pane_section" parent="@android:style/TextAppearance.Material.Caption">
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:minHeight">48dp</item>
		<item name="android:layout_marginLeft">16dp</item>
	</style>

	<style name="activity_time_entry">
		<item name="android:text">-:-</item>
		<item name="android:layout_width">0px</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:textSize">10sp</item>
	</style>

	<style name="activity_number_entry">
		<item name="android:text">-</item>
		<item name="android:layout_width">0px</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:textSize">14sp</item>
	</style>
</resources>